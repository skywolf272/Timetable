@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model TimeTable.Models.CoursesViewModel

@{
    ViewData["Title"] = "Home Page";
}
<div>
        <h1>Добро пожаловать, @Model.User.UserName</h1>
        <div class="d-flex flex-wrap">
        @{
            foreach (var course in Model.Courses)
            {
                <figure class="snip1336 shadow-lg rounded" style="max-width: 350px;">
                    <img src="@course.ImgPath" />
                    <figcaption>
                        @*<img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/331810/profile-sample4.jpg" alt="profile-sample4" class="profile" />*@
                        <h2>@course.Name<span>@Model.Teachers.Where(x => x.Id == course.TeacherId).FirstOrDefault().FirstName @Model.Teachers.Where(x => x.Id == course.TeacherId).FirstOrDefault().SecondName</span></h2>
                        <p>@course.Description</p>
                        <a asp-area="Admin" asp-controller="Creator" asp-action="CreateLesson" class="follow">Редактировать расписание уроков</a>
                        <a asp-area="Admin" asp-controller="Creator" asp-action="EditLesson" class="follow">Редактировать курс</a>
                        <a asp-area="Admin" asp-controller="Creator" asp-action="DeleteCourse" asp-route-ID="@course.ID" class="follow">Удалить курс</a>
                    </figcaption>
                </figure>
            }
        }
        </div>
</div>
