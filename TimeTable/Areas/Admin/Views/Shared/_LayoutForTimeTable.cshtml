@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - TimeTable</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/TimetableStyle.css" type="text/css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3" style="background-color: #4c68b0">
            <div class="container">
                <a class="navbar-brand" asp-area="Admin" asp-controller="Admin" asp-action="Courses">AdminPanel</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Admin" asp-action="Courses">Курсы</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Creator" asp-action="CreateCourse">Создать новый курс</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Creator" asp-action="CreateTeacher">Регистрация учителя</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Admin" asp-action="Timetable" asp-route-Days="">Расписание занятий</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Creator" asp-action="Teachers">Список преподавателей</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Admin" asp-action="News">Новости</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav flex-grow-2">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Logout">Выйти</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container" style="background-color: white">
        <main role="main" class="pb-3 mt-3">
            @RenderBody()
        </main>
    </div>


    <footer class="text-light text-center text-lg-start" style="background-color: #4c68b0; margin-top: 10%">
        <div class="container p-4">
            <div class="row">
                <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                    <h5 class="text-uppercase">Ссылки</h5>

                    <ul class="list-unstyled mb-0">
                        <li>
                            <a class="text-light" asp-area="Admin" asp-controller="Admin" asp-action="Courses">Курсы</a>
                        </li>
                        <li>
                            <a class="text-light" asp-area="Admin" asp-controller="Admin" asp-action="Contacts">Контакты</a>
                        </li>
                        <li>
                            <a class="text-light" asp-area="Admin" asp-controller="Creator" asp-action="Teachers">Список преподавателей</a>
                        </li>
                        <li>
                            <a class="text-light" asp-area="Admin" asp-controller="Admin" asp-action="News">Новости</a>
                        </li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                    <h5 class="text-uppercase">Контакты</h5>
                    <ul class="list-unstyled mb-0">
                        <p>Телефон: 8 000 000 00 00</p>
                        <p>Адрес: 123456, Россия, Москва, Проспект успеха, 150</p>
                        <p>Часы работы: 8:00-22:00</p>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

</body>
</html>
